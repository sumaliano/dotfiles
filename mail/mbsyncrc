# # #########
#   GMail  #
# ##########
IMAPAccount gmail
	Host imap.gmail.com
	User joel42silva@gmail.com
	PassCmd "gpg2 -q --for-your-eyes-only --no-tty -d ~/.gmailpass.asc"
	SSLType IMAPS
	AuthMechs LOGIN #seems to be need for some distros e.g. OSX
	#SSLVersions SSLv3
	CertificateFile ~/.mutt/certificates/Equifax_Secure_CA.pem

IMAPStore gmail-remote
	Account gmail

MaildirStore gmail-local
	# The trailing "/" is important
	Path  ~/mail/gmail/
	Inbox ~/mail/gmail/inbox

# # ############
#   Estamine  #
# #############
IMAPAccount estamine
	Host mail.estamine.net
	User joel@estamine.net
	AuthMechs LOGIN
	PassCmd "gpg2 -q --for-your-eyes-only --no-tty -d ~/.estaminepass.asc"
	SSLType IMAPS
	CertificateFile ~/.mutt/certificates/mail.estamine.net.pem

IMAPStore estamine-remote
	Account estamine

MaildirStore estamine-local
	Path  ~/mail/estamine/
	Inbox ~/mail/estamine/inbox


##############
#  Channels  #
##############

#Channel gmail
#	Master :gmail-remote:
#	Slave :gmail-local:
#	Patterns * ![Gmail]* "[Gmail]/Sent Mail" "[Gmail]/Drafts" "[Gmail]/Spam" "[Gmail]/Trash"
#	Create Both
#	SyncState *

Channel gmail_inbox
	Master :gmail-remote:
	Slave :gmail-local:
	#Patterns * ![Gmail]*
	Patterns "INBOX"
	Create Both
	SyncState *

channel gmail_sent
	Master :gmail-remote:"[Gmail]/Sent Mail"
	Slave :gmail-local:"sent"
	#Patterns "[Gmail]/Sent Mail"
	Create Both
	SyncState *

Channel gmail_draft
	Master :gmail-remote:"[Gmail]/Drafts"
	Slave :gmail-local:"drafts"
	#Patterns "[Gmail]/Drafts"
	Create Both
	SyncState *

Channel gmail_spam
	Master :gmail-remote:"[Gmail]/Spam"
	Slave :gmail-local:"spam"
	#Patterns "[Gmail]/Spam"
	Create Both
	SyncState *

Channel gmail_trash
	Master :gmail-remote:"[Gmail]/Trash"
	Slave :gmail-local:"trash"
	#Patterns "[Gmail]/Trash"
	Create Both
	SyncState *



#Channel estamine
#	Master :estamine-remote:
#	Slave :estamine-local:
#	#Patterns "INBOX" "Sent" "Drafts" "Trash"
#	Patterns "Sent" "Drafts" "Trash"
#	#Patterns * !zOld
#	Create Both
#	SyncState *

Channel estamine_inbox
	Master :estamine-remote:
	Slave :estamine-local:
	Patterns "INBOX"
	Create Both
	SyncState *

Channel estamine_sent
	Master :estamine-remote:"Sent"
	Slave :estamine-local:"sent"
	#Patterns "Sent"
	Create Both
	SyncState *

Channel estamine_draft
	Master :estamine-remote:"Drafts"
	Slave :estamine-local:"drafts"
	#Patterns "Drafts"
	Create Both
	SyncState *

Channel estamine_trash
	Master :estamine-remote:"Trash"
	Slave :estamine-local:"trash"
	#Patterns "Trash"
	Create Both
	SyncState *


Group gmail
	Channel gmail_inbox
	Channel gmail_sent
	Channel gmail_draft
	Channel gmail_spam
	Channel gmail_trash

Group mail_inbox
	Channel gmail_inbox

Group estamine
	Channel estamine_inbox
	Channel estamine_sent
	Channel estamine_draft
	Channel estamine_trash

