# MS Word documents
#application/msword; ~/.mutt/view_attachment.sh %s "-" '/Applications/TextEdit.app'

# Images
image/jpg; ~/.mutt/view_attachment.sh %s jpg
image/jpeg; ~/.mutt/view_attachment.sh %s jpg
image/pjpeg; ~/.mutt/view_attachment.sh %s jpg
image/png; ~/.mutt/view_attachment.sh %s png
image/gif; ~/.mutt/view_attachment.sh %s gif

# PDFs
application/pdf; ~/.mutt/view_attachment.sh %s pdf

# HTML
text/html; ~/.mutt/view_attachment.sh %s html
#text/html; ~/.mutt/view_attachment.sh %s html lynx
#text/html; ~/.mutt/view_attachment.sh %s html 'midori -a'
#text/html; ~/.mutt/view_attachment.sh %s html 'open -a firefox'
#text/html; ~/.mutt/view_attachment.sh %s html 'open -n -a safari'
#text/html; qlmanage -p "%s" &gt;& /dev/null; description=HTML Text; nametemplate=%s.html
#text/html; /usr/bin/firefox %s >/dev/null 2>&1; needsterminal


##auto_view will use the entry with the copiousoutput part:
#text/html; lynx -stdin -dump -force_html ; copiousoutput
text/html;  w3m -dump %s; nametemplate=%s.html; copiousoutput
#text/html; w3m -I %{charset} -dump %s; copiousoutput ; nametemplate=%s.html
#text/html; w3m -I %{charset} -T text/html; copiousoutput;
# text/html; elinks -dump %s; nametemplate=%s.html; copiousoutput


# Unidentified files
application/octet-stream; ~/.mutt/view_attachment.sh %s "-"

# Text
text/plain; ~/.mutt/view_attachment.sh %s txt 

#video
video/*; ~/.mutt/view_attachment.sh %s mp4


