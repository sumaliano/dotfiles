#!/bin/bash

# Check if Time Warrior is tracking 
# if $(~/.bin/timew | grep -q "Tracking"); then 
#     status="$( ~/.bin/timew | while read a && read b && read c && read d; \
#     do echo \
#         $(echo $a | sed -e 's/ \+/-->/g')\;  \
#         $(echo $b | sed -e 's/ \+/-->/g')\;  \
#         $(echo $c | sed -e 's/ \+/-->/g')\;  \
