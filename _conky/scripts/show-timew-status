if $(~/.bin/timew | grep -q "Tracking"); then 
    status="$(~/.bin/timew | head -n1)___This Week $(~/.bin/timew week | grep Tracked)___Today $(~/.bin/timew day | grep Tracked )"
else 
    status=$( ~/.bin/timew )
fi

echo ${status}



