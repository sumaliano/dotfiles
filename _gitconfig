# Git configuration template
# Copy to ~/.gitconfig and customize [user] section

[user]
    # CHANGE THESE - uncomment and set your info
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = nvim
    pager = less -FRX
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    tool = nvimdiff
    colorMoved = default
    algorithm = histogram

[difftool "nvimdiff"]
    # -d starts nvim in diff mode
    cmd = nvim -d "$LOCAL" "$REMOTE"

[difftool]
    prompt = false

[merge]
    tool = nvim4
    conflictstyle = diff3

[mergetool "nvim3"]
    # 3-way: LOCAL | MERGED | REMOTE
    cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE" -c "wincmd l"
    trustExitCode = true

[mergetool "nvim4"]
    # 4-way: LOCAL | BASE | REMOTE (top)
    #        MERGED (bottom)
    cmd = nvim -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED" -c "wincmd J"
    trustExitCode = true

[mergetool]
    prompt = false

[rerere]
    enabled = true

[alias]
    # Undo
    undo = reset HEAD~1 --mixed
    unstage = reset HEAD --
    discard = checkout --

    # Utility
    whoami = !git config user.name && git config user.email

    # Find
    find = !git ls-files | grep -i
    grep = grep -Ii

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[help]
    autocorrect = prompt

[credential]
    helper = cache --timeout=3600

# URL shortcuts (uncomment if needed)
# [url "git@github.com:"]
#     insteadOf = gh:
# [url "git@gitlab.com:"]
#     insteadOf = gl:
